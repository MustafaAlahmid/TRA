<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/b3">


    <Button
            android:text="creat order"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/open_place_picker_butto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/orderList"
            android:background="@drawable/roundedbutton"/>
    <Button
            android:text="order lists "
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/orderList" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/rUser"
            android:background="@drawable/roundedbutton"/>
    <Button
            android:text="Register User"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/rUser"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="312dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/orderList"
            android:background="@drawable/roundedbutton"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_info_details"
            android:id="@+id/imageButton2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/rUser" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.976" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.032"
            android:background="@drawable/roundedbutton"/>
</androidx.constraintlayout.widget.ConstraintLayout>